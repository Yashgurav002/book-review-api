{
    "info": {
      "name": "Book Review API",
      "_postman_id": "12345-67890-abcdef-xyz",
      "description": "Collection to test Book Review REST API endpoints",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "User Signup",
        "request": {
          "method": "POST",
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "url": { "raw": "http://localhost:5000/users/signup", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["users", "signup"] },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Password123\"\n}"
          }
        }
      },
      {
        "name": "User Login",
        "request": {
          "method": "POST",
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "url": { "raw": "http://localhost:5000/users/login", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["users", "login"] },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Password123\"\n}"
          }
        }
      },
      {
        "name": "Add New Book",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Content-Type", "value": "application/json" },
            { "key": "Authorization", "value": "Bearer {{token}}" }
          ],
          "url": { "raw": "http://localhost:5000/books", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["books"] },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"title\": \"The Great Gatsby\",\n  \"author\": \"F. Scott Fitzgerald\",\n  \"genre\": \"Classic\",\n  \"description\": \"A classic novel\",\n  \"publishedYear\": 1925\n}"
          }
        }
      },
      {
        "name": "Get All Books",
        "request": {
          "method": "GET",
          "url": {
            "raw": "http://localhost:5000/books?page=1&limit=10&author=Fitzgerald&genre=Classic",
            "protocol": "http",
            "host": ["localhost"],
            "port": "5000",
            "path": ["books"],
            "query": [
              { "key": "page", "value": "1" },
              { "key": "limit", "value": "10" },
              { "key": "author", "value": "Fitzgerald" },
              { "key": "genre", "value": "Classic" }
            ]
          }
        }
      },
      {
        "name": "Get Book By ID",
        "request": {
          "method": "GET",
          "url": {
            "raw": "http://localhost:5000/books/{{bookId}}?page=1&limit=5",
            "protocol": "http",
            "host": ["localhost"],
            "port": "5000",
            "path": ["books", "{{bookId}}"],
            "query": [
              { "key": "page", "value": "1" },
              { "key": "limit", "value": "5" }
            ]
          }
        }
      },
      {
        "name": "Submit Review",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Content-Type", "value": "application/json" },
            { "key": "Authorization", "value": "Bearer {{token}}" }
          ],
          "url": { "raw": "http://localhost:5000/books/{{bookId}}/reviews", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["books", "{{bookId}}", "reviews"] },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"reviewText\": \"Amazing book, highly recommended!\",\n  \"rating\": 5\n}"
          }
        }
      },
      {
        "name": "Update Review",
        "request": {
          "method": "PUT",
          "header": [
            { "key": "Content-Type", "value": "application/json" },
            { "key": "Authorization", "value": "Bearer {{token}}" }
          ],
          "url": { "raw": "http://localhost:5000/reviews/{{reviewId}}", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["reviews", "{{reviewId}}"] },
          "body": {
            "mode": "raw",
            "raw": "{\n  \"reviewText\": \"Updated review text\",\n  \"rating\": 4\n}"
          }
        }
      },
      {
        "name": "Delete Review",
        "request": {
          "method": "DELETE",
          "header": [
            { "key": "Authorization", "value": "Bearer {{token}}" }
          ],
          "url": { "raw": "http://localhost:5000/reviews/{{reviewId}}", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["reviews", "{{reviewId}}"] }
        }
      }
    ],
    "variable": [
      { "key": "token", "value": "" },
      { "key": "bookId", "value": "" },
      { "key": "reviewId", "value": "" }
    ]
  }
  